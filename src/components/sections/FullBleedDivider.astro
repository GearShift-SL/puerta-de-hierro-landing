---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  image: ImageMetadata;
  alt: string;
  quote?: string;
  height?: string;
}

const { image, alt, quote, height = 'h-[50vh] md:h-[60vh]' } = Astro.props;
---

<section class:list={['relative w-full overflow-hidden flex items-center justify-center', height]}>
  <Image
    src={image}
    alt={alt}
    class="absolute inset-0 w-full h-full object-cover"
    widths={[640, 1024, 1600, 2400]}
    sizes="100vw"
    loading="lazy"
  />
  <div class="absolute inset-0 bg-black/40"></div>
  {quote && (
    <p class="relative z-10 font-serif text-2xl md:text-4xl lg:text-5xl text-white text-center max-w-4xl px-8 leading-relaxed italic scroll-animate">
      {quote}
    </p>
  )}
</section>
