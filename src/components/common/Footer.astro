---
import Logo from '~/assets/icons/logo.svg';
import MapPinIcon from '~/assets/icons/map-pin.svg';
import MailIcon from '~/assets/icons/mail.svg';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
  target?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
  contactDetails: {
    address: string;
    addressLink: string;
    email: string;
  };
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light', contactDetails } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200  not-prose']}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-4">
          <a href="/">
            <Logo class="w-60 h-auto" />
          </a>
        </div>
        <div class="text-sm text-muted flex gap-1">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="text-muted hover:text-gray-700 hover:underline transition duration-150 ease-in-out"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>
      {
        links.map(({ title, links }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="font-medium mb-2">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm">
                  {links.map(({ text, href, ariaLabel, target = '_self' }) => (
                  <li class="mb-2">
                    <a
                      class="text-muted hover:text-gray-700 hover:underline transition duration-150 ease-in-out"
                      href={href}
                      aria-label={ariaLabel}
                      target={target}
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }

      <div id="contact-details" class="col-span-6 md:col-span-3 lg:col-span-2">
        <div class="font-medium mb-2">Contacto</div>
        <ul class="text-sm">
          <li class="mb-2">
            <a
              href={contactDetails.addressLink}
              class="text-muted hover:text-gray-700 hover:underline transition duration-150 ease-in-out flex items-center gap-2"
            >
              <MapPinIcon class="w-6 h-6 shrink-0" />
              <span>{contactDetails.address}</span>
            </a>
          </li>
          <li class="mb-2">
            <a
              href={`mailto:${contactDetails.email}`}
              class="text-muted hover:text-gray-700 hover:underline transition duration-150 ease-in-out flex items-center gap-2"
            >
              <MailIcon class="w-6 h-6 shrink-0" />
              <span>{contactDetails.email}</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                  target="_blank"
                >
                  {icon && <Fragment set:html={icon} />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
