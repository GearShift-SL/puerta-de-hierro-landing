---
// Header.astro

import ToggleMenu from '~/components/common/ToggleMenu.astro';

import Logo from '~/assets/icons/logo.svg';
import ChevronDownIcon from '~/assets/icons/chevron-down.svg';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

type ActionLink = any;

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<ActionLink>;
  isSticky?: boolean;
  isFullWidth?: boolean;
  isDark?: boolean;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,  // If true, the header will stick to the top of the page when scrolling
  isFullWidth = false,  // If sticky is true, this will make the header full width when scrolling
  isDark = false,  // If true, the header will be dark
} = Astro.props;

const currentPath = `/${new URL(Astro.url).pathname}/`;
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark, 'full-width': isFullWidth },
    'top-0 z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-opacity ease-in-out',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div class="absolute inset-0"></div>
  <div
    class:list={[
      'relative text-default py-3 px-3 md:px-6 mx-auto w-full max-w-7xl md:grid md:grid-cols-3 md:items-center'
    ]}
  >
    <div class="flex justify-between w-full">
      <a class="flex items-center" href={`/`}>
        <Logo class="h-10 w-auto" />
      </a>
      {
        links.length > 0 && (
          <div class:list={["flex items-center md:hidden", !isFullWidth && "ml-4"]}>
            <ToggleMenu />
          </div>
        )
      }
    </div>

    <nav
      id="mainNav"
      class="items-center md:mt-0 w-full md:w-auto hidden md:flex md:mx-5 text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:justify-self-center"
      aria-label="Main navigation"
    >
      <ul
        class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-xl md:text-[0.9375rem] tracking-[0.01rem] font-medium md:justify-center"
      >
        {
          links.map(({ text, href, links }) => (
            <li class={links?.length ? 'dropdown' : ''}>
              {links?.length ? (
                <>
                  <button type="button" class="hover:text-link px-4 py-3 flex items-center">
                    {text}{' '}
                    <Fragment set:html={ChevronDownIcon} />
                  </button>
                  <ul class="dropdown-menu md:backdrop-blur-md rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white/90 md:min-w-[200px] drop-shadow-xl">
                    {links.map(({ text: text2, href: href2 }) => (
                      <li>
                        <a
                          class:list={[
                            'first:rounded-t last:rounded-b md:hover:bg-gray-100 hover:text-link py-2 px-5 block whitespace-no-wrap',
                            { 'aw-link-active': href2 === currentPath },
                          ]}
                          href={href2}
                        >
                          {text2}
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <a
                  class:list={[
                    'text-gray-700 rounded-lg hover:bg-gray-300/20 px-4 py-3 flex items-center transition duration-300',
                    { 'aw-link-active': href === currentPath },
                  ]}
                  href={href}
                >
                  {text}
                </a>
              )}
            </li>
          ))
        }
      </ul>
    </nav>
    <div
      class="hidden md:self-center md:flex items-center md:mb-0 fixed w-full md:w-auto md:static justify-end left-0 rtl:left-auto rtl:right-0 bottom-0 p-3 md:p-0 md:justify-self-end"
    >
      <div class="items-center flex justify-between w-full md:w-auto gap-2">
        {
          actions?.length &&
            actions.map((action) => (
              <a
                href={action.href}
                class="cta-gradient font-bold py-2 px-4 rounded-lg inline-flex items-center gap-2 transition-colors"
              >
                {action.icon && <Fragment set:html={action.icon} />}
                {action.text}
              </a>
            ))
        }
      </div>
    </div>
  </div>
</header>

<style>
  @reference "../../styles/global.css";

  /* Header scroll transition styles */
  #header > div:last-child {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #header.scroll {
    top: 0.75rem !important;
    transition: top 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #header.scroll > div:last-child {
    @apply bg-page md:bg-white/90 md:backdrop-blur-md;
    box-shadow: 0 0.375rem 1.5rem 0 rgb(140 152 164 / 13%);
    border-radius: 1rem;
    margin: 0.5rem auto;
    width: fit-content;
    max-width: 80rem;
    padding: 0.75rem 1.5rem;
  }

  #header.scroll.full-width > div:last-child {
    width: calc(100% - 1.5rem);
    max-width: 80rem;
  }

  /* When scrolled and not full-width: use flex layout instead of grid */
  @media (min-width: 768px) {
    #header.scroll:not(.full-width) > div:last-child {
      display: flex;
      gap: 1.5rem;
      width: fit-content;
      max-width: 80rem;
    }

    #header.scroll:not(.full-width) > div:last-child > div:first-child {
      width: auto;
    }

    #header.scroll:not(.full-width) nav {
      justify-self: auto;
    }

    #header.scroll:not(.full-width) > div:last-child > div:last-child {
      justify-self: auto;
    }

    #header.scroll.full-width > div:last-child {
      width: calc(100% - 1.5rem);
      max-width: 80rem;
    }
  }

  :global(.dark) #header.scroll > div:last-child,
  #header.scroll.dark > div:last-child {
    @apply bg-page md:bg-[#030621e6] border-b border-gray-500/20;
    box-shadow: none;
    border-radius: 1rem;
    margin: 0.5rem auto;
    width: fit-content;
    max-width: 80rem;
    padding: 0.75rem 1.5rem;
  }

  :global(.dark) #header.scroll.full-width > div:last-child,
  #header.scroll.dark.full-width > div:last-child {
    width: calc(100% - 1.5rem);
    max-width: 80rem;
  }

  /* Dark mode: when scrolled and not full-width: use flex layout instead of grid */
  @media (min-width: 768px) {
    :global(.dark) #header.scroll:not(.full-width) > div:last-child,
    #header.scroll.dark:not(.full-width) > div:last-child {
      display: flex;
      gap: 1.5rem;
      width: fit-content;
      max-width: 80rem;
    }

    :global(.dark) #header.scroll:not(.full-width) > div:last-child > div:first-child,
    #header.scroll.dark:not(.full-width) > div:last-child > div:first-child {
      width: auto;
    }

    :global(.dark) #header.scroll.full-width > div:last-child,
    #header.scroll.dark.full-width > div:last-child {
      width: calc(100% - 1.5rem);
      max-width: 80rem;
    }
  }

  #header.expanded nav {
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    bottom: 70px !important;
    padding: 0 5px;
  }

  /* Mobile menu styles */
  #header.h-screen {
    display: flex;
    flex-direction: column;
    height: 100vh !important; /* Force exact viewport height */
    max-height: 100vh;
    overflow: hidden;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 50;
    background-color: white;
  }

  #header.h-screen > div {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow-y: auto;
  }

  #header.h-screen nav {
    display: flex;
    flex-direction: column;
    flex: 1;
    align-items: center;
    justify-content: center;
    margin-top: 1rem;
    overflow-y: auto;
  }

  #header.h-screen nav ul {
    width: 100%;
    max-width: 300px;
    margin: 0 auto;
  }

  #header.h-screen nav a,
  #header.h-screen nav button {
    width: 100%;
    text-align: center;
    font-size: 1.25rem;
    padding: 0.75rem 1rem;
    margin: 0.25rem 0;
  }

  #header.h-screen > div > div:last-child {
    display: flex !important;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 0;
    margin-top: auto;
    visibility: visible !important;
  }

  #header.h-screen > div > div:last-child > div {
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  #header.h-screen > div > div:last-child a {
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    max-width: 200px;
    white-space: nowrap;
  }

  @media (min-width: 768px) {
    #header.h-screen {
      display: block;
      position: sticky;
      height: auto !important;
      max-height: none;
      overflow: visible;
    }

    #header.h-screen > div {
      display: block;
      height: auto;
      overflow: visible;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const SCROLL_THRESHOLD = 30; // Change this value to set your desired threshold in pixels

    function handleScroll() {
      const nav = document.getElementById('mainNav');
      if (nav) {
        if (window.scrollY <= SCROLL_THRESHOLD) {
          nav.classList.add('mt-12');
        } else {
          nav.classList.remove('mt-12');
        }
      }
    }

    // Add event listener for scroll
    window.addEventListener('scroll', handleScroll);

    // Call handleScroll on page load to set initial state
    handleScroll();
  });
</script>
